<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20.0dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@drawable/touch"
                app:cardCornerRadius="10.0dp"
                app:cardElevation="10.0dp"
                tools:targetApi="lollipop">

                <afkt.project.ui.widget.BaseImageView
                    android:layout_width="130.0dp"
                    android:layout_height="130.0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_commodity" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dev_fillColor="#9C27B0"
                    app:dev_flags="triangle"
                    app:dev_paddingCenter="10.0dp"
                    app:dev_text1="活动优惠"
                    app:dev_text2="特价"
                    app:dev_textColor2="#80FFFF" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    app:dev_fillColor="#F44336"
                    app:dev_flags="triangle|right"
                    app:dev_paddingCenter="10.0dp"
                    app:dev_text1="活动优惠"
                    app:dev_text2="特价"
                    app:dev_textColor2="@color/white" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:dev_fillColor="#3F51B5"
                    app:dev_flags="triangle|bottom"
                    app:dev_paddingCenter="10.0dp"
                    app:dev_text1="活动优惠"
                    app:dev_text2="特价"
                    app:dev_textColor2="#66ffffff" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    app:dev_fillColor="#009688"
                    app:dev_flags="triangle|right|bottom"
                    app:dev_paddingCenter="10.0dp"
                    app:dev_text1="活动优惠"
                    app:dev_text2="特价"
                    app:dev_textColor2="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20.0dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@drawable/touch"
                app:cardCornerRadius="10.0dp"
                app:cardElevation="10.0dp"
                tools:targetApi="lollipop">

                <afkt.project.ui.widget.BaseImageView
                    android:layout_width="130.0dp"
                    android:layout_height="130.0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_commodity" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dev_fillColor="#03A9F4"
                    app:dev_paddingCenter="3.0dp"
                    app:dev_text1="满减" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    app:dev_fillColor="#4CAF50"
                    app:dev_flags="right"
                    app:dev_paddingCenter="3.0dp"
                    app:dev_text1="买送" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:dev_fillColor="#CDDC39"
                    app:dev_flags="bottom"
                    app:dev_paddingCenter="3.0dp"
                    app:dev_text1="赠品" />

                <dev.widget.ui.CornerLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    app:dev_fillColor="#795548"
                    app:dev_flags="right|bottom"
                    app:dev_paddingCenter="3.0dp"
                    app:dev_text1="拼图" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20.0dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@drawable/touch"
            app:cardCornerRadius="10.0dp"
            app:cardElevation="10.0dp"
            tools:targetApi="lollipop">

            <afkt.project.ui.widget.BaseImageView
                android:layout_width="130.0dp"
                android:layout_height="130.0dp"
                android:layout_gravity="center"
                android:background="@drawable/img_commodity" />

            <dev.widget.ui.CornerLabelView
                android:id="@+id/vid_acl_labelview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dev_fillColor="#FFC107"
                app:dev_paddingCenter="3.0dp"
                app:dev_text1="动态" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginBottom="10.0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_color"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="color" />

            <TextView
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="left" />

            <TextView
                android:id="@+id/btn_top"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="top" />

            <TextView
                android:id="@+id/btn_triangle"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="triangle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginBottom="10.0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_text1_minus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="text1-" />

            <TextView
                android:id="@+id/btn_text1_plus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="text1+" />

            <TextView
                android:id="@+id/btn_height1_minus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="height1-" />

            <TextView
                android:id="@+id/btn_height1_plus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="height1+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginBottom="10.0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_text2_minus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="text2-" />

            <TextView
                android:id="@+id/btn_text2_plus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="text2+" />

            <TextView
                android:id="@+id/btn_height2_minus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="height2-" />

            <TextView
                android:id="@+id/btn_height2_plus"
                android:layout_width="wrap_content"
                android:layout_height="25.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dp"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:text="height2+" />
        </LinearLayout>
    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>