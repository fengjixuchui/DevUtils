<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DevWidget">

        <!-- CustomXxx -->

        <attr name="dev_slide" format="boolean" />
        <attr name="dev_maxWidth" format="dimension" />
        <attr name="dev_maxHeight" format="dimension" />

        <!-- RightIconEditText -->

        <attr name="dev_rangeMultiple" format="float" />
        <attr name="dev_drawRightIcon" format="boolean" />

        <!-- WrapView -->

        <attr name="dev_maxLine" format="integer" />
        <attr name="dev_rowTopMargin" format="dimension" />
        <attr name="dev_viewLeftMargin" format="dimension" />

        <!-- LoadProgressBar -->

        <attr name="dev_canvasNumber" format="boolean" />
        <attr name="dev_progressColor" format="color" />
        <attr name="dev_outerRingColor" format="color" />
        <attr name="dev_insideCircleWidth" format="dimension" />
        <attr name="dev_outerRingWidth" format="dimension" />
        <attr name="dev_numberTextSize" format="dimension" />
        <attr name="dev_numberTextColor" format="color" />
        <attr name="dev_progressStyle" format="enum">
            <enum name="rings" value="0" />
            <enum name="fan_shaped" value="1" />
            <enum name="arc_fan_shaped" value="2" />
            <enum name="number" value="3" />
        </attr>

        <!-- FlowLikeView -->

        <attr name="dev_animDuration" format="integer" />
        <attr name="dev_iconWidth" format="dimension" />
        <attr name="dev_iconHeight" format="dimension" />

        <!-- CornerLabelView -->

        <attr name="dev_paddingTop" format="dimension" />
        <attr name="dev_paddingCenter" format="dimension" />
        <attr name="dev_paddingBottom" format="dimension" />

        <attr name="dev_text1" format="string" />
        <attr name="dev_textColor1" format="color" />
        <attr name="dev_textHeight1" format="dimension" />
        <attr name="dev_textBold1" format="boolean" />

        <attr name="dev_text2" format="string" />
        <attr name="dev_textColor2" format="color" />
        <attr name="dev_textHeight2" format="dimension" />
        <attr name="dev_textBold2" format="boolean" />

        <attr name="dev_fillColor" format="color" />
        <attr name="dev_flags" format="integer">
            <flag name="none" value="0" />
            <flag name="right" value="1" />
            <flag name="bottom" value="2" />
            <flag name="triangle" value="4" />
        </attr>

        <!-- RadiusView -->

        <attr name="dev_radius" format="dimension" />
        <attr name="dev_radius_left_top" format="dimension" />
        <attr name="dev_radius_left_bottom" format="dimension" />
        <attr name="dev_radius_right_top" format="dimension" />
        <attr name="dev_radius_right_bottom" format="dimension" />
    </declare-styleable>
</resources>